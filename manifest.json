{
    "manifest_version": 3,
    "name": "Job Application Tracker",
    "description": "Log job applications to Google Sheets",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Log Job Application"
    },
    "host_permissions": ["<all_urls>"]
  }